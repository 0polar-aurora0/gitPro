<!--pages/my/my.wxml-->
<block wx:if="{{ isUserData == true}}">
  <view class="allInfo">
    <view class="mainInfo">
      <view class="userInfo">
        <image alt="{{ userData.node_id }}" src="{{ userData.avatar_url }}"></image>
        <view class="textInfo">
          <a href="{{ userData.url }}">{{ userData.login }}</a>
        
          <text>ID: {{ userData.id }}</text>
    
        </view>
      </view>
      <view class="repoInfo">
        <view bindtap="ToRepo">
          <text>{{ userData.public_repos }}</text>
          <text>Respositories</text>
        </view>
        <view data-type="followers" bindtap="ToOtherUserPage">
          <text>{{ userData.followers }}</text>
          <text>Followers</text>
        </view>
        <view data-type="following" bindtap="ToOtherUserPage">
          <text>{{ userData.following }}</text>
          <text>Following</text>
        </view>
      </view>
    </view>

    <view class="otherInfo-1 otherInfo">
        <view>
          <image src="../../images/email.png"></image>
          <text>Activity</text>
        </view>
        <view>
          <image src="../../images/email.png"></image>
          <text>Issues</text>
        </view>
    </view>

    <view class="otherInfo-2 otherInfo">
      <view bindtap="blogTap">
        <image src="../../images/email.png"></image>
        <text>Blog</text>
      </view>
      <view bindtap="emailTap">
        <image src="../../images/email.png"></image>
        <text>Email</text>
      </view>
      <view>
        <image src="../../images/email.png"></image>
        <text>Company</text>
      </view>
      <view>
        <image src="../../images/email.png"></image>
        <text>Location</text>
      </view>
    </view>

    <view class="otherInfo-3 otherInfo">
        <view bindtap="supportTap">
          <image src="../../images/email.png"></image>
          <text>Support</text>
        </view>
        <view bindtap="donateTap">
          <image src="../../images/email.png"></image>
          <text>Donate</text>
        </view>
        
        <view>
          <image src="../../images/email.png"></image>
          <text>Feedback</text>
        </view>
        <view>
          <image src="../../images/email.png"></image>
          <text>About</text>
        </view>
    </view>
  </view>
</block>