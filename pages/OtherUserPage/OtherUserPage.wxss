/* 整个页面 */
page{
  height: auto
}

/* 登录区域 */
.login {
    width: 100%;
    height: 456px;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
}

.allInfo {
  background-color: rgb(244,244,244);
  width: 100%;
  height: 100%;
}

.mainInfo {
  width: 100%;
  height: 150px;
  background-color: white;
}

.userInfo {
  display: flex;  
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  height: 66%;
  width: 100%;
  /* padding: 5px; */
}

.textInfo {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.textInfo text, .textInfo text {
  font-size: 14px;
}

.textInfo :first-child {
  color: rgb(0,99,242);
  border-bottom: dotted 1px black;
}

.userInfo image {
  /* margin-left: 5px; */
  /* margin-right: 50px; */
  width: 70px;
  height: 70px;
}

.repoInfo {
  display: flex;
  flex-direction: row;
  border-top: solid 1px rgb(244,244,244);
  width: 100%;
  height: 33%;
  /* background-color: aqua; */
}

.repoInfo :nth-child(2) {
  border-left: rgb(244,244,244) solid 1px;
  border-right: rgb(244,244,244) solid 1px;
}

.repoInfo>view {
  text-align: center;
  width: 33%;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.otherInfo {
  margin: 15px 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}

.otherInfo-1 {
  height: 70;
}

.otherInfo-2 {
  height: 140px;
}

.otherInfo-3 {
  height: 140px;
}

.otherInfo>view {
  width: 100%;
  height: 35px;
  background-color: white;
  border-bottom: 1px solid rgb(244,244,244);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.otherInfo>view>image {
  width: 20px;
  height: 20px;
  margin: auto 10px;
}

