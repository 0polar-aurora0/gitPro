/* 整个页面 */
page{
  height: auto
}

.allInfo {
  background-color: rgb(244,244,244);
  width: 100%;
  height: 100%;
}

.mainInfo {
  width: 100%;
  height: 150px;
  background-color: white;
}

.userInfo {
  display: flex;  
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  height: 66%;
  width: 100%;
  /* padding: 5px; */
}

.textInfo {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.textInfo text, .textInfo text {
  font-size: 14px;
}

.textInfo :first-child {
  color: rgb(0,99,242);
  border-bottom: dotted 1px black;
}

.userInfo image {

  width: 70px;
  height: 70px;
}

.repoInfo {
  display: flex;
  flex-direction: row;
  border-top: solid 1px rgb(244,244,244);
  width: 100%;
  height: 33%;
}


.repoInfo>view {
  text-align: center;
  width: 33%;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.info_piece_list {
  margin: 15px 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  height: auto;

}

.info_piece {
  width: 100%;
  height: 50px;
  background-color: white;
  border-bottom: 1px solid rgb(244,244,244);
  display: flex;
  flex-direction: row;
  align-items: center;

}

.imageIcon {
  border-radius: 50px;
  width: 30px;
  height: 30px;
  margin: auto 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.imageIcon image {
  width: 50%;
  height: 50%;
}