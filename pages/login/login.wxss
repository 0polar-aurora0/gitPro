/* pages/login/login.wxss */

page{
  height: 100%;
}

/* 登陆区域 */
.loginPage {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;

}

/* 登陆区域github‘图片 */
.loginPage image {
  width: 100px;
  height: 100px;
}

/* tab切换标签 */
.swiper-tab {
    width: 100%;
    text-align: center;
    line-height: 80rpx;
}

/* swiper列表切换标签 */
.swiper-tab-list{  
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #777777;
}


/* swiper选中的容器列表 */
.on { 
  color: blue;
  border-bottom: 3rpx solid blue;
}

/* swiper容器区域 */
.swiper-box { 
  display: block; 
  width: 200px; 
  overflow: hidden; 
}

.swiper-box view{
  text-align: center;
}

/* token登录区域 */
.login-area {
  height: 200px;
  width: 100%;
  align-items: center;
}

.login-form {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 登陆区域下的input */
.input-css1 {
  border-color: gray;
  margin: 20px 0;
  line-height: 30px;
  border-bottom: dotted 1px gray;
}

/* 登陆区域下的button */
.btn-css1 {
  width: 50%;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 36rpx;
  margin: 20px 0;
  padding: 0;
}

/* 登陆界面尾部区域 */
.login-tail {
  width: 100%;
  text-align: center;
  font-size: 13px;
}