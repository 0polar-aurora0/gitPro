/* pages/repoPage/repoPage.wxss */

page{
  height: auto
}

/* 登录区域 */
.login {
    width: 100%;
    height: 456px;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
}

.allInfo {
  background-color: rgb(244,244,244);
  width: 100%;
  height: 100%;
}

.mainInfo {
  width: 100%;
  height: 150px;
  background-color: white;
}

.userInfo {
  padding: 0 10px ;
  display: flex;  
  flex-direction: row;
  align-items: center;
  /* justify-content: space-between; */
  height: 66%;
  width: 100%;
  /* padding: 5px; */
}

.textInfo {
  margin-left: 10px;
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.textInfo text{
  height: 100%;
  font-size: 14px;
  overflow: scroll;
}

.textInfo :first-child {
  color: rgb(0,99,242);
  border-bottom: dotted 1px black;
}

.userInfo image {
  /* margin-left: 5px; */
  /* margin-right: 50px; */
  width: 70px;
  height: 70px;
}

.repoInfo {
  display: flex;
  flex-direction: row;
  border-top: solid 1px rgb(244,244,244);
  width: 100%;
  height: 33%;
  /* background-color: aqua; */
}


.repoInfo>view {
  text-align: center;
  width: 33%;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.info_piece_list {
  margin: 15px 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  height: auto;

}

.info_piece {
  margin: 0 auto;
  width: 100%;
  height: auto;
  padding: 10px 0;
  background-color: white;
  border-bottom: 1px solid rgb(244,244,244);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  align-items: center;
}

.skip {
  flex-grow: 1;
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.skip image{
  float: right;
  width: 30px;
  height: 30px;
}

.imageIcon {
  border-radius: 50px;
  width: 30px;
  height: 30px;
  margin: auto 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}

.imageIcon image {
  width: 50%;
  height: 50%;
}

.readme {
  margin-top: 10px;
  width: auto;
  height: auto;
  padding: 0 10px;
}
